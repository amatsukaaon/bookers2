


<div class="container px-5 px-sm-0">
    <div class="row">
        <div Class="col-md-3">
            <h2>User info</h2>
            <%= image_tag @user.get_profile_image(100,100) %>
            <table class="table">
              <tbody><tr></tr>
              <tr>
            	  <th>name</th>
            	  <th><%= @book.user.name %></th>
              </tr>
              <tr>
            	  <th>introduction</th>
            	  <th><%= @book.user.introduction %></th>
              </tr>
            </tbody></table>
            <div class="row">
              <%= link_to edit_user_path(@book.user), class:"btn btn-outline-secondary btn-block" do %>
              <i class="fas fa-user-cog"></i>
            <% end %>
            </div>
            <h2 class="mt-3">New book</h2>
            <%= form_with model: @book_new, url: '/books', method: :post do |f| %>
              <h4>Title</h4>
              <%= f.text_field :title %>
              <h4>Opition</h4>
              <%= f.text_area :body %>
              <%= f.submit 'Create Book' %>
            <% end %>
        </div>
        <div class="col-md-8 offset-md-1">
          <h2>Book detail</h2>
          <table class="table">
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>
                  <p><%= image_tag @book.user.get_profile_image(100,100) %></p>
                  <p><%= link_to @book.user.name,user_path(@book.user.id) %></p>
                  </td>
                <td><%= @book.title do |f| %><% end %></td>
                <td><%= @book.body do |f| %><% end %></td>
                <% if @book.user_id == current_user.id %>
                <td><%= link_to "Edit", edit_book_path(@book.id),class:"btn btn-sm btn-success edit_book_83960" %></td>
                <td><%= link_to "Destroy", book_path(@book.id), method: :delete, class:"btn btn-sm btn-danger destroy_book_83960" %></td>
